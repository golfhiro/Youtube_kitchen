<% content_for(:title, t('.title')) %>
<!-- メイン -->
<section class="max-w-screen-2xl px-4 md:px-8 mx-auto">
  <h1 class="text-gray-800 text-2xl lg:text-3xl font-bold text-center mb-4 md:mb-6"><%= t('.title')%></h1>
  <%# 動画を表示 %>
    <div class="m-8 p-8 py-8 bg-gray-200 rounded-lg">
      <% @videos.each_with_index do |video, idx| %>
        <h3><%= (Date.today.beginning_of_week + idx).strftime('%-m/%-d (%A)') %></h3>
          <iframe class="mt-4 mb-4 pb-10 mx-auto" width="280" height="157" src="https://www.youtube.com/embed/<%= video.video_id %>" frameborder=1 allow="fullscreen"></iframe>
        <% end %>
    </div>
</section>
