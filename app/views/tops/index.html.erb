<section class="min-h-screen relative flex flex-1 items-center justify-center overflow-hidden rounded-lg py-16 md:py-20 xl:py-48">
  <%= image_tag "/pexels-dmitry-zvolskiy-2062426.jpg", width: "100%", height: "auto" %>
  <div class="absolute inset-0 bg-black opacity-50">
    <div class="relative flex flex-col items-center justify-center p-4 sm:max-w-xl z-10 h-full">
      <h1 class="mb-8 text-center text-4xl font-bold text-white sm:text-5xl md:mb-12 md:text-6xl">おいしい献立は、<br>心の健康につながる</h1>
        <%= button_to '献立を見る', menus_path, method: :get, class: "inline-block rounded-lg bg-indigo-500 text-center text-sm font-semibold text-white py-3 px-8 outline-none ring-indigo-300 transition duration-100 hover:bg-indigo-600 focus-visible:ring active:bg-indigo-700 md:text-base mb-5" %>
        <%= form_with url: create_weekly_menu_path, method: :post, local: false do |f| %>
          <%= f.button '献立を作成する', class: "inline-block rounded-lg bg-indigo-500 text-center text-sm font-semibold text-white py-3 px-8 outline-none ring-indigo-300 transition duration-100 hover:bg-indigo-600 focus-visible:ring active:bg-indigo-700 md:text-base mb-5" %>
        <% end %>
    </div>
  </div>
</section>
