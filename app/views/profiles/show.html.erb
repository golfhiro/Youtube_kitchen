<div class="bg-gray-50 py-10">
  <div class="container mx-auto px-4">
    <h1 class="text-4xl font-bold text-center mb-10"><%= t('.title') %></h1>
      <div class="flex flex-col md:flex-row items-start justify-between bg-white rounded-lg shadow-lg p-8">
        <div class="md:w-2/3">
          <h1 class="font-bold mb-5">プロフィール</h1>
          <table class="table-auto mb-4">
            <tr>
              <td class="px-4 py-2 text-gray-600 font-bold"><%= User.human_attribute_name(:email) %></td>
              <td class="px-4 py-2 text-gray-800"><%= current_user.email %></td>
            </tr>
            <tr>
              <td class="px-4 py-2 text-gray-600 font-bold"><%= User.human_attribute_name(:name) %></td>
              <td class="px-4 py-2 text-gray-800"><%= current_user.name %></td>
            </tr>
          </table>
          <%= link_to t('defaults.edit'), edit_profile_path, class: 'btn btn-primary' %>
        </div>

        <%# 献立カレンダー %>
        <div>
          <h1 class="font-bold mb-5"><%= @current_user.name %>さんの献立カレンダー</h1>
            <%= month_calendar partial: 'simple_calendar/month_calendar', events: @current_user_menus  do |date, menus| %>
              <%= date.to_s.slice(8, 2) %><br>
              <% menus.each do |menu| %>
                <%= truncate(menu.dish.name, length: 10) %>
              <% end %>
            <% end %>
        </div>
      </div>
  </div>
</div>
