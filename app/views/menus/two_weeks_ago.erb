<% if @two_weeks_ago_menus.present? %>
  <%# 献立一覧の親要素を追加 %>
  <div class="p-4">
    <div class="flex justify-center mb-4">
        <h1 class="text-4xl font-bold"><%= @two_weeks_ago_menus.first.date.strftime('%-m/%-d') %>~<%= @two_weeks_ago_menus.last.date.strftime('%-m/%-d') %>（先々週の献立）</h1>
    </div>
    <div class="flex justify-between mb-4">
      <%= link_to '3週間前', three_weeks_ago_menus_path, class: "btn btn-outline" %>
      <%= link_to '先週', last_week_menus_path, class: "btn btn-outline" %>
    </div>
    <div class="grid grid-cols-4 gap-4">
      <% @two_weeks_ago_menus.each do |menu| %>
        <%# 献立のカードを追加 %>
        <div class="bg-white rounded-lg shadow-lg overflow-hidden w-72">
          <%# 日付を表示 %>
          <div class="p-4 bg-gray-200">
            <h3 class="text-xl font-semibold text-center"><%= menu.date.strftime('%-m/%-d (%a)') %></h3>
          </div>
          <%# 動画を表示 %>
          <div class="p-4 relative" style="max-width: 600px; margin: 0 auto;">
            <div class="w-full h-0" style="padding-bottom: 56.25%;">
              <iframe class="absolute inset-0 w-full h-full object-cover object-center" src="https://www.youtube.com/embed/<%= menu.dish.video.video_id %>" frameborder="0" allow="fullscreen" style="top: 20px;"></iframe>
            </div>
          </div>
          <%# 変更ボタンを表示 %>
          <div class="p-4">
            <div class="p-4 flex justify-center">
              <%= link_to '変更する', edit_menu_path(menu.id), class: "btn btn-primary" %>
            </div>
        </div>
      <% end %>
    </div>
    <div class="flex justify-between p-4">
      <%= link_to '3週間前', three_weeks_ago_menus_path, class: "btn btn-outline" %>
      <%= link_to '先週', last_week_menus_path, class: "btn btn-outline" %>
    </div>
<% else %>
    <div class="flex flex-col items-center justify-center h-screen ">
      <h1 class="text-4xl mt-10 mb-8">先々週分の献立は作成していないようです。。</h1>
    </div>
    <div class="flex justify-between p-4">
      <%= link_to '3週間前', three_weeks_ago_menus_path, class: "btn btn-outline" %>
      <%= link_to '先週', last_week_menus_path, class: "btn btn-outline" %>
    </div>

  </div>
<% end %>
