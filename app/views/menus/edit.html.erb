<h1 class="text-3xl font-bold mb-6">献立変更</h1>

<%= form_with model: @menu, local: true, class: "w-full md:w-1/2" do |f| %>
  <div class="form-group">
    <%= f.label :dish_id, "献立を選択してください" %>
    <%= f.select :dish_id, options_for_select(@dishes.map {|d| [d.name, d.id]}, @menu.dish_id), {}, class: "select select-bordered w-full" %>
  </div>
  <div class="form-group mt-6">
    <%= f.submit '変更する', class: "btn btn-primary btn-block" %>
  </div>
<% end %>
