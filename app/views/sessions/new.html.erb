<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl"><%= t'.title' %></h1>

<!-- Form -->
  <%= form_with url: login_path, method: :post do |f| %>
    <div class="my-5">
      <%= f.label :email, User.human_attribute_name(:email) %>
      <%= f.email_field :email, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>
    <div class="my-5">
      <%= f.label :password, User.human_attribute_name(:password) %>
      <%= f.password_field :password, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>
    <div class="d-grid">
      <%= f.submit t('defaults.login'), class: 'btn btn-active btn-primary' %>
    </div>
  <% end %>
  <div class='text-center'>
    <%= link_to t('.to_register_page'), new_user_path %>
    <%= link_to t('.password_forget'), new_password_reset_path %>
  </div>

</div>
