
<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl"><%= t('.title') %></h1>
    <%= form_with url:password_resets_path,method: :post,local: true do |f|%>
      <div class="my-5">
      <%=f.label :email, User.human_attribute_name(:email) %>
      <%= f.email_field :email, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
      </div>
      <div class="d-grid">
        <%= f.submit t('defaults.submit'), class: 'btn btn-active btn-primary' %>
      </div>
    <%end%>
</div>
